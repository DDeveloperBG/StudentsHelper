@model StudentsHelper.Web.ViewModels.Teachers.TeachersListViewModel

@{
    ViewData["Title"] = "Учители";
}

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td><img src=@item.PicturePath /></td>
                <td>
                    @item.ApplicationUserName
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
